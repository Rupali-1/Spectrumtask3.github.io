<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css'
      integrity='sha512-usVBAd66/NpVNfBge19gws2j6JZinnca12rAe2l+d+QkLU9fiG02O1X8Q6hepIpr/EYKZvKx/I9WsnujJuOmBA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'
      integrity='sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css'
      integrity='sha512-1cK78a1o+ht2JcaW6g8OXYwqpev9+6GqOkz9xmBN9iUUhIndKtxwILGWYOSibOKjLsEdjyjZvYDq/cZwNeak0w=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link rel='stylesheet' href='./css/portfolio-form.css' />
    <title>Portfolio Form</title>
  </head>
  <body>
    <section>
      <div class='container'>
        <div class='row'>
          <form method='POST' action='/form' data-aos='fade-up'>
            <div class='col-12 col-md-8 mx-auto form-section'>
              <div class='d-flex justify-content-between align-items-center'>
                <h2>Portfolio Details Form</h2>
                <h2 class='mx-2'>
                  <a href='/'>
                    <i class='fas fa-home'></i>
                  </a>
                  <a href='/logout'>
                    <i class='fas fa-sign-out-alt'></i>
                  </a>
                </h2>
              </div>
              <hr />
              <div class='row'>
                <div class='col-12 col-md-6 input-box'>
                  <label for='fname'>First Name *</label>
                  <input
                    type='text'
                    name='fname'
                    value='{{user.fname}}'
                    id='fname'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='lname'>Last Name *</label>
                  <input
                    type='text'
                    name='lname'
                    value='{{user.lname}}'
                    id='lname'
                    required
                  />
                </div>
              </div>
              <div class='row'>
                <div class='col-12 col-md-6 input-box'>
                  <label for='email'>Email *</label>
                  <input
                    type='email'
                    name='email'
                    value='{{user.email}}'
                    id='email'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='mobile'>Mobile *</label>
                  <input
                    type='text'
                    name='mobile'
                    minlength='10'
                    maxlength='15'
                    value='{{user.mobile}}'
                    id='mobile'
                  />
                </div>
              </div>
              <div class='row'>
                <div class='col-12 col-md-6 input-box'>
                  <label for='mobile'>Date of Birth *</label>
                  <input
                    type='date'
                    name='dob'
                    value='{{user.dob}}'
                    id='dob'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='domain'>Domain *</label>
                  <input
                    type='text'
                    name='domain'
                    placeholder='Web Developer, Graphics Designer'
                    value='{{user.domain}}'
                    id='domain'
                    required
                  />
                </div>
              </div>
              <div class='row'>
                <div class='col-12 col-md-2 input-box'>
                  <label for='age'>Age *</label>
                  <input
                    type='text'
                    name='age'
                    maxlength='2'
                    value='{{user.age}}'
                    id='age'
                    required
                  />
                </div>
                <div class='col-12 col-md-10 input-box'>
                  <label for='address'>Address *</label>
                  <input
                    type='text'
                    name='address'
                    value='{{user.address}}'
                    id='address'
                    required
                  />
                </div>
                <div class='col-12 input-box'>
                  <label for='address'>Bio *</label>
                  <textarea
                    name='bio'
                    maxlength='200'
                    required
                  >{{user.bio}}</textarea>
                </div>
              </div>
              <hr />
              <h5 class='py-3'>Qualification</h5>
              <div class='row'>
                <h6>Intermediate</h6>
                <div class='col-12 col-md-6 input-box'>
                  <label for='iyear'>Year *</label>
                  <input
                    type='text'
                    name='iYear'
                    value='{{user.qualification.inter.year}}'
                    id='iyear'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='ibranch'>Branch *</label>
                  <input
                    type='text'
                    name='iBranch'
                    value='{{user.qualification.inter.branch}}'
                    id='ibranch'
                    required
                  />
                </div>
                <div class='col-12 input-box'>
                  <label for='iclg'>College Name *</label>
                  <input
                    type='text'
                    name='iClg'
                    value='{{user.qualification.inter.college}}'
                    id='iclg'
                    required
                  />
                </div>
              </div>
              <div class='row'>
                <h6>Graduation</h6>
                <div class='col-12 col-md-6 input-box'>
                  <label for='gyear'>Year *</label>
                  <input
                    type='text'
                    name='gYear'
                    value='{{user.qualification.grad.year}}'
                    id='gyear'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='gbranch'>Branch *</label>
                  <input
                    type='text'
                    name='gBranch'
                    value='{{user.qualification.grad.branch}}'
                    id='gbranch'
                    required
                  />
                </div>
                <div class='col-12 input-box'>
                  <label for='gclg'>College Name *</label>
                  <input
                    type='text'
                    name='gClg'
                    value='{{user.qualification.grad.college}}'
                    id='gclg'
                    required
                  />
                </div>
              </div>
              <div class='row'>
                <h6>Master Degree</h6>
                <div class='col-12 col-md-6 input-box'>
                  <label for='myear'>Year *</label>
                  <input
                    type='text'
                    name='mYear'
                    value='{{user.qualification.master.year}}'
                    id='myear'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='mbranch'>Branch *</label>
                  <input
                    type='text'
                    name='mBranch'
                    value='{{user.qualification.master.branch}}'
                    id='mbranch'
                    required
                  />
                </div>
                <div class='col-12 input-box'>
                  <label for='mclg'>College Name *</label>
                  <input
                    type='text'
                    name='mClg'
                    value='{{user.qualification.master.college}}'
                    id='mclg'
                    required
                  />
                </div>
              </div>
              <hr />
              <h5 class='pt-3'>Skills</h5>
              <div class='row'>
                <div class='col-12 input-box'>
                  <label for='programming'>Programming Language *</label>
                  <input
                    type='text'
                    name='programming'
                    value='{{user.skills.programming}}'
                    id='programming'
                    required
                  />
                </div>
                <div class='col-12 input-box'>
                  <label for='framework'>Framework</label>
                  <input
                    type='text'
                    name='frameworks'
                    value='{{user.skills.frameworks}}'
                    id='framework'
                  />
                </div>
                <div class='col-12 input-box'>
                  <label for='other'>Other Skills</label>
                  <input
                    type='text'
                    name='other'
                    value='{{user.skills.other}}'
                    placeholder='e.g: Team work, Communication'
                    id='other'
                  />
                </div>
              </div>
              <hr />
              <h5 class='py-3'>Projects</h5>
              <div class='row'>
                <h6>Project 1</h6>
                <div class='col-12 col-md-6 input-box'>
                  <label for='proj1_title'>Project Title *</label>
                  <input
                    type='text'
                    name='proj1_title'
                    value='{{user.projects.project1.title}}'
                    id='proj1_title'
                    required
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='proj1_link'>Project Link *</label>
                  <input
                    type='text'
                    name='proj1_link'
                    value='{{user.projects.project1.link}}'
                    id='proj1_link'
                    required
                  />
                </div>
              </div>
              <div class='row'>
                <h6>Project 2</h6>
                <div class='col-12 col-md-6 input-box'>
                  <label for='proj2_title'>Project Title</label>
                  <input
                    type='text'
                    name='proj2_title'
                    value='{{user.projects.project2.title}}'
                    id='proj2_title'
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='proj2_link'>Project Link</label>
                  <input
                    type='text'
                    name='proj2_link'
                    value='{{user.projects.project2.link}}'
                    id='proj2_link'
                  />
                </div>
              </div>
              <div class='row'>
                <h6>Project 3</h6>
                <div class='col-12 col-md-6 input-box'>
                  <label for='proj3_title'>Project Title</label>
                  <input
                    type='text'
                    name='proj3_title'
                    value='{{user.projects.project3.title}}'
                    id='proj3_title'
                  />
                </div>
                <div class='col-12 col-md-6 input-box'>
                  <label for='proj3_link'>Project Link</label>
                  <input
                    type='text'
                    name='proj3_link'
                    value='{{user.projects.project3.link}}'
                    id='proj3_link'
                  />
                </div>
              </div>
              <p class='warning text-danger'></p>
              <div class='row pt-4 px-2'>
                <button type='submit'>Submit</button>
              </div>
              {{! /// }}
            </div>
          </form>
        </div>
      </div>
    </section>

    <script
      src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js'
      integrity='sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    ></script>
    <script
      src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.min.js'
      integrity='sha512-a6ctI6w1kg3J4dSjknHj3aWLEbjitAXAjLDRUxo2wyYmDFRcz2RJuQr5M3Kt8O/TtUSp8n2rAyaXYy1sjoKmrQ=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    ></script>
    <script
      src='https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js'
      integrity='sha512-A7AYk1fGKX6S2SsHywmPkrnzTZHrgiVT7GcQkLGDe2ev0aWb8zejytzS8wjo7PGEXKqJOrjQ4oORtnimIRZBtw=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    ></script>
    <script type='text/javascript' src='./js/daisy.js'></script>

    <script type='text/javascript' src='./js/portfolio-form.js'></script>
  </body>
</html>